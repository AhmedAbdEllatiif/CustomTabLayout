<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:overScrollMode="never"
    android:padding="30dp"
    android:scrollbars="none"
    tools:context="com.ahmed.sampleApp.Activities.MainActivity">


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:paddingBottom="15dp">
        <!--Content Text-->
        <TextView
            android:id="@+id/txt_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="start"
            android:padding="3dp"
            android:text="@string/sample"
            android:textColor="#000"
            android:textSize="@dimen/content_txt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!--Switch layout-->
        <include
            layout="@layout/switcher_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp" />

        <!--Titles only button-->
        <Button
            android:id="@+id/btn_showViewPager_titles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_shape"
            android:text="@string/titles_only"
            android:textColor="@color/white"
            android:textSize="@dimen/content_txt" />

        <!--Icons only button-->
        <Button
            android:id="@+id/btn_showViewPager_icons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_shape"
            android:text="@string/icons_only"
            android:textColor="@color/white"
            android:textSize="@dimen/content_txt" />

        <!--Titles and Icons button-->
        <Button
            android:id="@+id/btn_showViewPager_titlesAndIcons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_shape"
            android:text="@string/icons_and_titles"
            android:textColor="@color/white"
            android:textSize="@dimen/content_txt" />

        <!--Custom Shape button-->
        <Button
            android:id="@+id/btn_showViewPager_custom_shape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_shape"
            android:text="@string/custom_shape"
            android:textColor="@color/white"
            android:textSize="@dimen/content_txt" />
    </androidx.appcompat.widget.LinearLayoutCompat>

</ScrollView>